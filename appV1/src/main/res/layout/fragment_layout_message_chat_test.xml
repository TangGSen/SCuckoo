<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/test_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/test_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试登陆" />

        <Button
            android:id="@+id/test_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试我的资料" />

        <Button
            android:id="@+id/test_showRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试showRecommendationPage" />

        <Button
            android:id="@+id/test_addfriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试添加好友" />

        <Button
            android:id="@+id/test_add_bmob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试bmob" />

        <Button
            android:id="@+id/test_get_comstor_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试获取自定义的字段" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>